{
  "name": "kisara-backend",
  "version": "1.2.0",
  "packageManager": "yarn@4.1.1",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "test": "tap --allow-incomplete-coverage",
    "start": "cross-env NODE_ENV=production yarn build && node dist/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev --transpile-only ./src/index.ts",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "compile-schemas": "json2ts -i ./src/schemas/ -o ./src/types",
    "migrate": "npx prisma migrate"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2",
    "@types/jsonwebtoken": "^9",
    "@types/node": "^20.12.5",
    "cross-env": "^7.0.3",
    "json-schema-to-typescript": "^13.1.2",
    "prettier": "^3.2.5",
    "socket.io-client": "^4.7.5",
    "tap": "^18.7.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.4"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/oauth2": "^7.8.0",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.12.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "fastify-socket.io": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.20.0",
    "pino-pretty": "^11.0.0",
    "socket.io": "^4.7.5"
  }
}

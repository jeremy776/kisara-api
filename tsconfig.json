{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "CommonJS",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "paths": {
      "@kisara/*": ["*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
